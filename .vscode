mkdir -p .vscode
cat > .vscode/settings.json << 'EOF'
{
  "cmake.configureArgs": [
    "-DCMAKE_TOOLCHAIN_FILE=${env:HOME}/vcpkg/scripts/buildsystems/vcpkg.cmake"
  ],
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "files.associations": {
    "*.hpp": "cpp",
    "*.h": "cpp"
  },
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools"
}
EOF