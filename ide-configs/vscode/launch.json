{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Game",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${cmake.buildKit}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Debug",
            "miDebuggerPath": "/usr/bin/lldb-mi",
            "logging": {
                "engineLogging": false
            },
            "osx": {
                "MIMode": "lldb",
                "program": "${workspaceFolder}/build/${cmake.launchTargetFilename}"
            },
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "program": "${workspaceFolder}/build/${cmake.launchTargetFilename}"
            },
            "windows": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/build/Debug/${cmake.launchTargetFilename}"
            }
        },
        {
            "name": "Release Game",
            "type": "cppdbg", 
            "request": "launch",
            "program": "${workspaceFolder}/build/${cmake.launchTargetFilename}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build",
            "osx": {
                "MIMode": "lldb",
                "program": "${workspaceFolder}/build/${cmake.launchTargetFilename}"
            },
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "program": "${workspaceFolder}/build/${cmake.launchTargetFilename}"
            },
            "windows": {
                "MIMode": "gdb",
                "program": "${workspaceFolder}/build/Release/${cmake.launchTargetFilename}"
            }
        }
    ]
}